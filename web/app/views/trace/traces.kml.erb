<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <% @traces.each do |trace| %>
    <Placemark>
      <name><%=h trace.file_name %></name>
      <MultiGeometry>
        <LineString>
          <% segment = nil -%>
          <coordinates>
          <% trace.trace_points.summary.each do |point| -%>
            <% segment = point.segment unless segment -%>
            <% if segment != point.segment -%>
              <% segment = point.segment -%>
          </coordinates>
        </LineString>
        <LineString>
          <coordinates>
            <% end -%>
            <%=h point.lon %>,<%=h point.lat %>
          <% end -%>
          </coordinates>
        </LineString>
      </MultiGeometry>
    </Placemark>
    <% end %>
    <% @traces.each do |trace| %>
      <% trace.waypoints.summary.each do |wp| %>
            <Placemark>
            <name>Waypoint</name>
            <Point>
              <coordinates><%=h wp.lon %>,<%=h wp.lat %>,0</coordinates>
            </Point>
          </Placemark>
      <% end %>
    <% end %>
  </Document>
</kml>