<h2>Processed Scans (<%= @shadow_scans.count %>)</h2>
<table class="admin">
  <thead>
    <tr>
      <th></th>
      <th>Scan ID</th>
      <th>School</th>
      <th>Mode</th>
      <th>User</th>
      <th>Alias</th>
      <th>Updated</th>
    </tr>
  </thead>
  <% @shadow_scans.each do |scan| %>
  <tr>
    <td><% form_tag({:controller => :admin, :action => :scan_remove}) do %>
          <%= hidden_field_tag 'scan_id', scan.id %>
          <%= submit_tag 'Remove' %>
        <% end %>
    </td>
    <td><%= scan.scan_id %></td>
    <td><%= if scan.school then scan.school.name else "(none)" end %></td>
    <td><%= if scan.mode then scan.mode.name else "(none)" end %></td>
    <td><%= scan.user_id %></td>
    <td><%= scan.alias %></td>
    <td><%= scan.updated_at %></td>
  </tr>
  <% end %>
</table>

<h2>Unprocessed Scans (<%= @unclaimed_scans.count %>)</h2>

<table class="admin">
  <thead>
    <tr>
      <th>Action</th>
      <th>Scan ID</th>
      <th>Last Step</th>
      <th>Description</th>
      <th>Print ID</th>
      <th>Uploaded</th>
    </tr>
  </thead>
  <% @unclaimed_scans.each do |scan| %>
  <tr>
    <td><%= link_to 'Process Scan', :controller => :site, :action => :edit, :scan => scan.id if scan.last_step == 6 %>
    <td><%= scan.id %></td>
    <td><%= scan.last_step %></td>
    <td><%= scan.status %></td>
    <td><%= scan.print_id %></td>
    <td><%= scan.created %></td>
  </tr>
  <% end %>
</table>