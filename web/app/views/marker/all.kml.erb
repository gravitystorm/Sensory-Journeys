<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <Style id="happy">
      <LabelStyle>
        <color>00ffffff</color>
      </LabelStyle>
      <IconStyle>
        <Icon>
          <href><%= request.protocol+request.host_with_port+image_path('positive.png') %></href>
        </Icon>
      </IconStyle>
    </Style>
    <Style id="neutral">
      <LabelStyle>
        <color>00ffffff</color>
      </LabelStyle>
      <IconStyle>
        <Icon>
          <href><%= request.protocol+request.host_with_port+image_path('neutral.png') %></href>
        </Icon>
      </IconStyle>
    </Style>
    <Style id="sad">
      <LabelStyle>
        <color>00ffffff</color>
      </LabelStyle>
      <IconStyle>
        <Icon>
          <href><%= request.protocol+request.host_with_port+image_path('negative.png') %></href>
        </Icon>
      </IconStyle>
    </Style>
    <% @markers.each do |marker| %>
    <Placemark>
      <name><%=h marker.emotion %></name>
      <description><% if marker.text != '' %><%=h marker.text %><% else %> <% end %></description>
      <styleUrl>#<%=h marker.emotion %></styleUrl>
      <Point>
        <coordinates><%=h marker.lon %>,<%=h marker.lat %>,0</coordinates>
      </Point>
    </Placemark>
    <% end %>
  </Document>
</kml>
