<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <% @emotions.each do |emotion| %>
    <Style id="emotion_<%= emotion.id %>">
      <LabelStyle>
        <color>00ffffff</color>
      </LabelStyle>
      <IconStyle>
        <Icon>
          <href><%= request.protocol+request.host_with_port+image_path(emotion.icon) %></href>
        </Icon>
      </IconStyle>
    </Style>
    <% end -%>
    <% @markers.each do |marker| %>
    <Placemark>
      <name><%=h marker.emotion.text %></name>
      <description><% if marker.text != '' %><%=h marker.text %><% else %> <% end %></description>
      <styleUrl>#emotion_<%=h marker.emotion.id %></styleUrl>
      <Point>
        <coordinates><%=h marker.lon %>,<%=h marker.lat %>,0</coordinates>
      </Point>
    </Placemark>
    <% end %>
  </Document>
</kml>
